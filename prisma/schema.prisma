generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model users {
  id                   Int      @id @default(autoincrement())
  name                 String
  email                String   @unique
  password             String
  notes                post[]
  friendIds           Int[]    @default([])  // Array of friend user IDs
  isVerified           Boolean  @default(false)
  verificationCode     String?
  verificationExpires  DateTime?
  loginCode            String?
  loginCodeExpires     DateTime?
  resetToken           String?
  resetTokenExpiry     DateTime?
}


model post {
  id           Int     @id @default(autoincrement())
  title        String
  content      String
  userID       Int
  users        users   @relation(fields: [userID], references: [id], onDelete: Cascade)
  sharedWith   Int[]   @default([])  // Array of user IDs this note is shared with
}